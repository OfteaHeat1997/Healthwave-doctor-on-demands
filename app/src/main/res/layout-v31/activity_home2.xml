<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:clipToOutline="true"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:layout_editor_absoluteX="22dp"
    tools:layout_editor_absoluteY="81dp"
    tools:context=".ActivityHome">


    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="381dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="400dp"
            android:layout_height="67dp"
            android:background="@color/white"
            app:backgroundTint="#FFFFFF"
            app:itemActiveIndicatorStyle="@style/CardView.Light"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/bottom_menu" />
    </FrameLayout>



    <Button
        android:id="@+id/button"
        android:layout_width="198dp"
        android:layout_height="59dp"
        android:background="#498BBC"
        android:text="SYMPTOMS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <TextView
        android:id="@+id/textHi"
        android:layout_width="180dp"
        android:layout_height="23dp"
        android:backgroundTint="#00FFFFFF"
        android:text="HI, Rosie"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="125dp"
        android:layout_height="26dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Have a  nice day"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/mic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textHi"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bell"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="start|top"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/bell"
            app:layout_constraintBottom_toTopOf="@+id/mic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/textHi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.851" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/rosieHand"
        android:layout_width="27dp"
        android:layout_height="11dp"
        android:layout_gravity="start|top"
        android:layout_marginStart="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/hand"
        app:layout_constraintBottom_toBottomOf="@+id/textHi"
        app:layout_constraintEnd_toEndOf="@+id/textHi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textHi"
        app:layout_constraintTop_toTopOf="@+id/textHi"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="269dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginBottom="14dp"
        android:backgroundTint="#00FFFFFF"
        android:text="Search by doctor"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:layout_gravity="start|top"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <ImageView
        android:id="@+id/mic"
        android:layout_width="47dp"
        android:layout_height="23dp"
        android:layout_gravity="start|top"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/mic"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="349dp"
        android:layout_height="172dp"
        android:layout_marginBottom="5dp"
        android:elevation="8dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toTopOf="@+id/cardViewMedicalCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/titletext"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Do you need an urgent care?"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/clickToCall"
            android:layout_width="170dp"
            android:layout_height="32dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center_horizontal"
            android:text="Click to Call your Doctor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCall"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#0495D6"
            android:text="Call.." />


        <Button
            android:id="@+id/buttonBook"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="#0495D6"
            android:text="Book now" />

        <TextView
            android:id="@+id/onlineAppointment"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="65dp"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center_horizontal"
            android:text="Online Doctor Appointment"
            android:textSize="15sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMedicalCenter"
        android:layout_width="351dp"
        android:layout_height="147dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="270dp"
            android:layout_height="26dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#00FFFFFF"
            android:gravity="center"
            android:text="Medical Center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="378dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="195dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#00FFFFFF"
            android:text="Online Symptomen,is your go-to guide for navigating online symptom "
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="411dp" />

        <ImageView
            android:id="@+id/doctor"
            android:layout_width="100dp"
            android:layout_height="131dp"
            android:layout_gravity="start|top"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="19dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="TODO"
            android:src="@drawable/doctor"
            tools:layout_editor_absoluteX="279dp"

            tools:layout_editor_absoluteY="378dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="145dp"
        android:layout_height="27dp"
        android:backgroundTint="#00FFFFFF"
        android:text="SMARTDOCAI"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="36dp"
        android:layout_marginRight="265dp"
        android:layout_marginBottom="538dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
       android:id="@+id/cardViewProfile"
        app:layout_constraintBottom_toTopOf="@+id/frame_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textHi"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053"
        app:srcCompat="@drawable/rosie" />
    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>

















