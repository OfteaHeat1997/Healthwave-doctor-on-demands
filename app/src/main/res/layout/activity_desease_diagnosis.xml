<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background"
    android:clipToOutline="true"
    android:padding="16dp"
    android:textAlignment="center"
    tools:context=".DeseaseDiagnosisActivity">

    <!-- The BottomNavigationView -->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="342dp"
        android:layout_height="177dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035">

        <!-- The CardView with a transparent background -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDoctorDetails"
            android:layout_width="332dp"
            android:layout_height="126dp"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#3fff"
            android:clipToPadding="true"
            android:elevation="0dp"
            android:foregroundTint="#000000"
            android:padding="10dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/doctorCardiology"
                android:layout_width="86dp"
                android:layout_height="132dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-7dp"
                app:srcCompat="@drawable/doctor" />

            <TextView
                android:id="@+id/nameDoctor1"
                android:layout_width="132dp"
                android:layout_height="26dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="55dp"
                android:backgroundTint="#00FFFFFF"
                android:text="Name: Dr. Smith"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textBelow"
                android:layout_width="154dp"
                android:layout_height="26dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="#00FFFFFF"
                android:text="Cardiologist"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:background="@color/white"
        app:backgroundTint="#FFFFFF"
        app:itemActiveIndicatorStyle="@style/CardView.Light"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:menu="@menu/bottom_menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDoctorDetailsBook"
        android:layout_width="359dp"
        android:layout_height="389dp"
        android:layout_marginTop="212dp"
        android:layout_marginBottom="25dp"
        android:elevation="8dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Doctor's About TextView -->
            <TextView
                android:id="@+id/textViewAboutDoctor"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="About: Doctor Dr. Smith"
                android:layout_marginTop="12dp"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <!-- Doctor's Summary -->
            <TextView
                android:layout_width="316dp"
                android:layout_height="124dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Dr. Smith is a renowned cardiologist known for his expertise in diagnosing and treating heart-related conditions. With extensive experience and a commitment to patient care, Dr. Smith is dedicated to improving heart health and providing top-notch cardiology services."
                android:textColor="@color/black" />

            <!-- Doctor's Availability -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewDoctorAvailability"
                android:layout_width="322dp"
                android:layout_height="61dp"
                android:layout_margin="2dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#00FF00"
                app:cardCornerRadius="30dp"
                android:textSize="18sp"
                android:textStyle="italic">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="Available: Monday to 24/7"
                    android:textColor="@color/black" />

            </androidx.cardview.widget.CardView>


            <!-- Make Appointment Button -->
            <Button
                android:id="@+id/buttonMakeAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/heatwaveblue"
                android:gravity="center"
                android:text="Make Appointment" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
