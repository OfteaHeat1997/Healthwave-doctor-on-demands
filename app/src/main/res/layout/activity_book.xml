<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background"
    android:clipToOutline="true"
    android:padding="16dp"
    android:textAlignment="center"
    tools:context=".DeseaseDiagnosisActivity">

    <!-- The BottomNavigationView -->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="343dp"
        android:layout_height="124dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035">

        <!-- The CardView with a transparent background -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDoctorDetails"
            android:layout_width="332dp"
            android:layout_height="126dp"
            android:layout_margin="2dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#3fff"
            android:clipToPadding="true"
            android:elevation="0dp"
            android:foregroundTint="#000000"
            android:padding="10dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/doctorCardiology"
                android:layout_width="86dp"
                android:layout_height="132dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-7dp"
                app:srcCompat="@drawable/doctor" />

            <TextView
                android:id="@+id/nameDoctor1"
                android:layout_width="132dp"
                android:layout_height="26dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="55dp"
                android:backgroundTint="#00FFFFFF"
                android:text="Name: Dr. Smith"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textBelow"
                android:layout_width="154dp"
                android:layout_height="26dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="75dp"
                android:backgroundTint="#00FFFFFF"
                android:text="Cardiologist"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="356dp"
        android:layout_height="62dp"
        android:background="@color/white"
        app:backgroundTint="#FFFFFF"
        app:itemActiveIndicatorStyle="@style/CardView.Light"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:menu="@menu/bottom_menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDoctorDetailsBook"
        android:layout_width="365dp"
        android:layout_height="421dp"
        android:layout_marginTop="212dp"
        android:layout_marginBottom="25dp"
        android:elevation="8dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="435dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Doctor's About TextView -->

            <TextView
                android:id="@+id/textViewAboutDoctor"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="About: Doctor Dr. Smith"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />




            <TextView
                android:id="@+id/textPhrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Name: PatieneID"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Date And Time: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/textDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Doctor: Dr. Smith"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textSpecialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Specialist: Cardiologist"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="italic" />


            <ImageButton
                android:id="@+id/imageButtonDate"
                android:layout_width="159dp"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/calender" />

            <ImageButton
                android:id="@+id/imageButtonTime"
                android:layout_width="163dp"
                android:layout_height="129dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-134dp"
                android:scaleType="centerInside"
                android:src="@drawable/datetime" />

            <Button
                android:id="@+id/buttonDialog1"
                android:layout_width="325dp"
                android:layout_height="54dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="#8CB8DC"
                android:foregroundTint="#0E2DDA"
                android:text="Set Time And Date" />

            <Button
                android:id="@+id/buttonMakeAppointment"
                android:layout_width="153dp"
                android:layout_height="54dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/heatwaveblue"
                android:gravity="center"
                android:text="Book Now" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>